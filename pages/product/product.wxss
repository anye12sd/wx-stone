/* pages/product/product.wxss */
.clear::after{
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.lineBox{
  font-size: 16px;
  padding:15px 0;  
  color:#666;
  position: relative;
}
.line::before{
  content:"";
  position:absolute;
  top:52%;
  background: #999;
  left:-25px;
  width: 25%;
  height: 1px;
}
.line::after{
  content:"";
  position:absolute;
  top:52%;
  background: #999;
  right:-25px;
  width: 25%;
  height: 1px;
}
.lineBox-bottom{
  width:100%;
  height:1px;
  background: #eee
}
.pages{
  margin:20px 2% 0 2%;
}
.example1{
  width:48%;
  display: inline-block
}
.example1:nth-child(even){
  float:right;
}
.example1:nth-child(odd){
  float:left;
}
.img-box{
  width:100%;
}
.company-img{
  width:100%;
  height:110px;
  border-radius: 5px;
}
.example-title{
  font-size: 14px;
  color:#666;
  height:40px;
  line-height: 40px;
}
.tel-icon{
  width:48px;
  height:48px;
  position: fixed;
  right:0;
  bottom:120px;
  z-index: 100;
  border-radius: 50%;
}